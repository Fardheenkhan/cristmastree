      #program to make christmas tree
      
a= int(input('number of rows: '))
def top(n):
    for i in range(n):
        for j in range(n-i):
            print(' ', end=' ')
        for k in range(2*i+1):
            print('^',end=' ')
        print()
def bottom(n):
    for i in range(n):
        for j in range(n-1):
            print(' ', end=' ')
        print('|||||')
       
top(a)
top(a)
bottom(a)
